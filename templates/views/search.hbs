<div class="container">
  <div class="panel panel-default">
      <div class="panel-heading"> <h4>Search Results for <b>"{{data.keywords}}"</h4></b></div>
      <div class="panel-body">
        <p></p>
        <!-- Table -->
        <table class="table table-striped table-hover">

          <tr>
                     <th>
                         Name
                     </th>
                     <th>
                         Vendor
                     </th>
                     <th>
                         Price
                     </th>
                     <th>
                         Shop
                     </th>
                 </tr>
                     {{#each data.products}}
                 <tr>
                     <td>
                         {{title}}
                     </td>
                      <td>
                         {{vendor}}
                      </td>
                      <td>
                         {{price}}
                      </td>
                      <th>
                          <a target="_blank" class="btn btn-default" href="{{url}}" role="button">See</a>
                      </th>
                 </tr>
                         {{/each}}

        </table>

  </div>
<!-- pagination -->
</div>

</div>
