<ul class="pagination">
	<li {{#unless data.products.previous}}class="disabled"{{/unless}}>
		<a href="{{paginationPreviousUrl data.products.previous}}">
			<span class="glyphicon glyphicon-chevron-left"></span>
		</a>
	</li>
	{{{paginationNavigation data.products.pages data.products.currentPage data.products.totalPages}}}
	<li {{#unless data.products.next}}class="disabled"{{/unless}}>
		<a href="{{paginationNextUrl data.products.next data.products.totalPages}}">
			<span class="glyphicon glyphicon-chevron-right"></span>
		</a>
	</li>
</ul>
